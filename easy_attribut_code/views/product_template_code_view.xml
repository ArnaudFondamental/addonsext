<odoo>
    <data>
        <record id="product_template_form_inherit_code_value" model="ir.ui.view">
            <field name="name">product.template.form.inherit.code.value</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='detailed_type']" position="after">
                        <field name="code"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>